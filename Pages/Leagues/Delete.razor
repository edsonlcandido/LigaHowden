@page "/leagues/delete/{id}"
@inject NavigationManager Navigation
@inject LeagueService leagueService


@code {
    [Parameter]
    public string Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var deleteLeate = await leagueService.DeleteLeague(Id);
        if (deleteLeate == "liga deletada")
        {
            Navigation.NavigateTo("/leagues", true);
        }
        
    }
}
