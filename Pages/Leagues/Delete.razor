@page "/leagues/delete/{id}"
@inject NavigationManager Navigation
@inject LeagueService leagueService
@inject ProtectedSessionStorage sessionStorage


@code {
    [Parameter]
    public string Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var token = await sessionStorage.GetAsync<string>("apiToken");
        var deleteLeate = await leagueService.DeleteLeague(Id);
        if (deleteLeate == "liga deletada")
        {
            Navigation.NavigateTo("/leagues", true);
        }else{
            Navigation.NavigateTo("/leagues", true);
        }        
    }
}
